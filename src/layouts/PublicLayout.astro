---
import Layout from './Layout.astro';
import SiteHeader from '../components/ui/SiteHeader';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <SiteHeader client:load />
    
    <div class="pt-16 min-h-screen flex flex-col">
        <slot />
    </div>

    <footer class="border-t border-white/10 py-8 mt-auto bg-slate-900 text-center">
        <div class="container mx-auto px-4 text-slate-500 text-sm">
            <p>&copy; {new Date().getFullYear()} CVStudio.tools. Todos los derechos reservados.</p>
        </div>
    </footer>
</Layout>