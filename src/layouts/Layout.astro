---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CV Builder Frontend" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        <style is:global>
            /* Reglas globales de impresión */
            @media print {
                /* Ocultar todo lo que no sea el área principal */
                body > *:not(main) { display: none; }
                
                /* Resetear márgenes del navegador */
                @page { margin: 0; }
                body { margin: 0; -webkit-print-color-adjust: exact; }
            }
        </style>
	</head>
	<body>
		<slot />
	</body>
</html>